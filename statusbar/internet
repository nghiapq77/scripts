    #wifiicon="$(grep "^\s*w" /proc/net/wireless | awk '{ print "ï‡«",int($3 * 100 / 70) "%" }')"
#ping -q -c 1 -w 1 1.1.1.1 > /dev/null || wifiicon="ï±"
#printf " %s" "$wifiicon"
if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null ; then
    wifiicon="$(awk '/^\s*w/ { print "ğŸ“¶", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null ; then
    grep -xq '0x1003' /sys/class/net/w*/flags && wifiicon="ğŸ“¡ " || wifiicon="ï± "
fi

