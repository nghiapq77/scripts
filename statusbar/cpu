#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" ;;
	2) setsid "$TERMINAL" -e htop & ;;
esac

# Current CPU utility
(grep 'cpu ' /proc/stat; sleep 0.2; grep 'cpu ' /proc/stat) | awk -v RS="" '{ printf "%2.0f%", ($13-$2+$15-$4)*100/($13-$2+$15-$4+$16-$5)}'

